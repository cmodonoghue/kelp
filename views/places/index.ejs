<% include ../partials/header %>

<header class="jumbotron jumbotron-fluid">
  <div class="container">
  <h1>Welcome to Kelp!</h1>
      <p>The best places in Bikini Bottom</p>
      <p>
          <a class="btn btn-primary btn-large shade" href="index/new">Add New Location</a>
      </p>  
  </div>
</header>

<div class="showcase">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h3 id="show-title">Our Most Popular Locations</h3>
    </div>

    <div class="row text-center">
        <% places.forEach(function(place){ %>
            <div class="col-md-3 col-sm-6">
              <div class="thumbnail">
                <div class="image-thumb" style="background-image: url(<%= place.image %>)"></div>
                <div class="caption">
                  <h4><%= place.name %></h4>
                </div>
                <p>
                  <a href="/index/<%= place._id %>" class="btn btn-primary shade" id="cap-btn">More Info</a>
                </p>
              </div>            
            </div>
        <% }) %>
    </div>
  </div>
</div>


<% include ../partials/footer %>
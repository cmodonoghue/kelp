<% include ../partials/header %>
<div class="container stripes">
  <div class="row">
    <h1 style="text-align: center">Add New Comment to <%= place.name %></h1>
    <div id="new-place">
      <form action="/index/<%= place._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/index" class="back">Go Back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>